# Forex Trading Journal - Environment Variables Example
# Copy this file to .env and .env.local with your actual values

# ==============================================
# TradingView Capture Logging Configuration
# ==============================================

# Enable detailed debug logging for TradingView capture process
# Set to 'true' to see step-by-step logs in console
DEBUG=false

# Enable saving logs to files in /logs directory
# Set to 'true' to save detailed logs to tradingview-capture-*.log files
LOG_TRADINGVIEW=false

# ==============================================
# Other Environment Variables
# ==============================================

# Node environment
NODE_ENV=development

# Firebase Configuration (if using Firebase)
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef123456

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ==============================================
# TradingView Capture Debug Guide
# ==============================================

# 1. Basic logging (default - only errors and important steps):
#    DEBUG=false
#    LOG_TRADINGVIEW=false

# 2. Console debug mode (detailed logs in terminal):
#    DEBUG=true
#    LOG_TRADINGVIEW=false

# 3. File logging mode (save logs to files):
#    DEBUG=false
#    LOG_TRADINGVIEW=true

# 4. Full debug mode (console + file logging):
#    DEBUG=true
#    LOG_TRADINGVIEW=true

# Log files will be saved to: ./logs/tradingview-capture-*.log
# Each capture session gets its own log file with timestamp