# Example Environment Variables
# Copy this file to .env.local for development or .env.production for production

# Firebase Configuration for client
VITE_FIREBASE_API_KEY=YOUR_FIREBASE_API_KEY
VITE_FIREBASE_PROJECT_ID=YOUR_FIREBASE_PROJECT_ID
VITE_FIREBASE_APP_ID=YOUR_FIREBASE_APP_ID
VITE_FIREBASE_AUTH_DOMAIN=YOUR_FIREBASE_AUTH_DOMAIN
VITE_FIREBASE_STORAGE_BUCKET=YOUR_FIREBASE_STORAGE_BUCKET
VITE_FIREBASE_MESSAGING_SENDER_ID=YOUR_FIREBASE_MESSAGING_SENDER_ID
VITE_FIREBASE_DATABASE_URL=YOUR_FIREBASE_DATABASE_URL
VITE_FIREBASE_MEASUREMENT_ID=YOUR_FIREBASE_MEASUREMENT_ID

# Cloud Functions URLs (if using Firebase Functions)
VITE_UPLOAD_MEDIA_URL=https://us-central1-your-project-id.cloudfunctions.net/uploadMediaV2
VITE_DELETE_MEDIA_URL=https://us-central1-your-project-id.cloudfunctions.net/deleteMedia
VITE_API_FUNCTION_URL=https://us-central1-your-project-id.cloudfunctions.net/api
VITE_STATUS_FUNCTION_URL=https://us-central1-your-project-id.cloudfunctions.net/status

# Use relative URLs or absolute URLs
# true = use relative paths like /api/upload/chart (via rewrites)
# false = use absolute paths directly to functions
VITE_USE_RELATIVE_PATHS=true

# App Configuration
NODE_ENV=development
VITE_APP_ENV=development

# Database URL (if using PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/trading_journal