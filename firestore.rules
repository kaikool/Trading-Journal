rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // === PHẦN GỐC CỦA BẠN - ĐƯỢC GIỮ NGUYÊN ===
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Users can manage their own trades, goals, and strategies.
      match /trades/{tradeId} {
        allow read, write, create, delete: if request.auth != null && request.auth.uid == userId;
      }
      
      match /goals/{goalId} {
        allow read, write, create, delete: if request.auth != null && request.auth.uid == userId;
        
        match /milestones/{milestoneId} {
            allow read, write, create, delete: if request.auth != null && request.auth.uid == userId;
        }
      }

      match /strategies/{strategyId} {
        allow read, write, create, delete: if request.auth != null && request.auth.uid == userId;
      }
      
      match /strategyAnalyses/{analysisId} {
        allow read, write, create, delete: if request.auth != null && request.auth.uid == userId;
      }
    }

    // === PHẦN BỊ THIẾU - ĐƯỢC BỔ SUNG VÀO ===
    match /userAchievements/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /userMetrics/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}